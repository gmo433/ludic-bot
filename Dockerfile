# Dockerfile
# --- СТАДИЯ СБОРКИ ---
FROM golang:1.21 AS builder

WORKDIR /app

# 1. Копируем go.mod для кэширования зависимостей
COPY go.mod .

# 2. Загружаем и очищаем зависимости (генерирует go.sum и обеспечивает чистоту)
RUN go mod tidy 

# 3. Копируем весь исходный код (включая main.go)
COPY . .

# 4. Сборка исполняемого файла
# Используем go build . (точка) — самый надёжный способ собрать пакет main в текущей директории.
RUN CGO_ENABLED=0 go build -v -ldflags "-s -w" -o /bot .

# --- ФИНАЛЬНЫЙ ОБРАЗ (Минимальный) ---
# Используем минимальный образ Debian для уменьшения размера и безопасности
FROM debian:buster-slim

WORKDIR /root/
# Убедитесь, что бинарник имеет права на исполнение
RUN chmod +x /root/bot

# Копирование исполняемого файла из стадии сборки
COPY --from=builder /bot .

# Запуск бота
CMD ["./bot"]
